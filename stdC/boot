# generating stdlib => ice files
# 
acomp="../bin/acomp"
aopt="../bin/aopt"
alib="../stdlib"

echo "\$ aleph standard files" > stdlib.ice

for e in aleph-stdbase aleph-stdgetint aleph-stdgetline aleph-stdputasstring \
         aleph-stdputint aleph-stdputline aleph-stdputstring aleph-stdwait \
         aleph-stdin aleph-stdarg aleph-stdout aleph-stdformatprint ; do
  if $acomp -W -I $alib $alib/$e; then
     $aopt --replace $e
     echo "'include' \"$e\"" >> stdlib.ice
  else
     echo "ERROR in $e, aborting"
     return
  fi
done

echo "done"



